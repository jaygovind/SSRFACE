@model SimpleCRUDExample.Models.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

@Html.PartialAsync("~/Views/Shared/_ErrorMessage.cshtml").Result

<h4 align="center">Log in</h4>
<hr />

<div class="row justify-content-md-center">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Log in" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-controller="Team" asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to the list</a>
                </div>
            </div>
        </form>
    </div>
</div>