@model SSRFACE.ViewModels.GetsubcommorReplyVM

@if (Model != null && Model.Subcommntreplymodel != null)
{
    foreach (var subComment in Model.Subcommntreplymodel)
    {
        <div class="row" style="width: 100.3%; border-bottom: 1px solid #d2cece; margin-right: -14px; margin-left: -1px;">

            <div class="col-md-4">
                <div class="userProfil" style="margin-left: 9px; margin-top: 12px;">
                    @*<img src="~/Images/@subComment.imageProfileUrl" class="img-circle" style="width: 46px; height: 53px; border: 1px solid #bcb8b8;" />*@
                    <img src="/images/users/user-4.jpg" class="img-circle" style="width: 46px; height: 53px; border: 1px solid #bcb8b8;" />

                    <a href="#" style="margin-left: 5px; font-weight: bold; font-size: 13px;"> @subComment.Username </a>
                </div>
            </div>

            <div class="col-md-7">
                <div class="commentDetails">
                    <div class="post-text">
                        <p style="margin-top: 27px; font-size: 13px; color: #9c9898;"> @subComment.CommentMsg </p>
                    </div>
                </div>
                </div>

            <div class="col-md-1" >
                <div class="commentDetails">
                    <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                    <time class="timeago" style="margin-top: 27px; font-size: 13px; color: #9c9898;  margin-left: 4px;" datetime="@subComment.CommentedDate">@subComment.CommentedDate</time>

                </div>
            </div>

        </div>
    }
}

<script>

    $(document).ready(function () {
        jQuery("time.timeago").timeago();
    });</script>


